<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00BDBDBD">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#5F6B48"
            android:text="운동기록"
            android:textSize="20dp"
            android:paddingTop="10dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_radius_all">


            <RelativeLayout
                android:id="@+id/dialog_record_content_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="@drawable/camo_storke">
                <TextView
                    android:id="@+id/dialog_record_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="12dp"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"
                    android:textAlignment="textStart"
                    android:text="예시"

                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_record_content_view"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/dialog_record_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/radius_rightbottom"
                    android:text="확인"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>